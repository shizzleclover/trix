{
  "name": "node-express",
  "type": "base",
  "framework": "express",
  "runtime": "node",
  "files": [
    {
      "source": "backend/base/node/express/src/index.ts",
      "destination": "src/index.{{#if typescript}}ts{{else}}js{{/if}}",
      "type": "template"
    },
    {
      "source": "backend/base/node/express/src/routes/index.ts",
      "destination": "src/routes/index.{{#if typescript}}ts{{else}}js{{/if}}",
      "type": "template"
    },
    {
      "source": "backend/base/node/express/src/middleware/errorHandler.ts",
      "destination": "src/middleware/errorHandler.{{#if typescript}}ts{{else}}js{{/if}}",
      "type": "template"
    }
  ],
  "dependencies": {
    "prod": {
      "express": "^4.18.2",
      "cors": "^2.8.5",
      "dotenv": "^16.3.1"
    },
    "dev": {
      "@types/express": "^4.17.21",
      "@types/cors": "^2.8.17",
      "@types/node": "^20.10.5",
      "tsx": "^4.7.0",
      "nodemon": "^3.0.2"
    }
  },
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js"
  }
}