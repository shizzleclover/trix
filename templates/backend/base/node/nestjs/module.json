{
    "name": "node-nestjs",
    "type": "base",
    "framework": "nestjs",
    "runtime": "node",
    "files": [
        {
            "source": "backend/base/node/nestjs/src/main.ts",
            "destination": "src/main.ts",
            "type": "template"
        },
        {
            "source": "backend/base/node/nestjs/src/app.module.ts",
            "destination": "src/app.module.ts",
            "type": "template"
        },
        {
            "source": "backend/base/node/nestjs/src/app.controller.ts",
            "destination": "src/app.controller.ts",
            "type": "template"
        },
        {
            "source": "backend/base/node/nestjs/src/app.service.ts",
            "destination": "src/app.service.ts",
            "type": "template"
        },
        {
            "source": "backend/base/node/nestjs/tsconfig.json",
            "destination": "tsconfig.json",
            "type": "template"
        },
        {
            "source": "backend/base/node/nestjs/nest-cli.json",
            "destination": "nest-cli.json",
            "type": "template"
        }
    ],
    "dependencies": {
        "prod": {
            "@nestjs/common": "^10.0.0",
            "@nestjs/core": "^10.0.0",
            "@nestjs/platform-express": "^10.0.0",
            "reflect-metadata": "^0.1.13",
            "rxjs": "^7.8.1"
        },
        "dev": {
            "@nestjs/cli": "^10.0.0",
            "@nestjs/schematics": "^10.0.0",
            "@nestjs/testing": "^10.0.0",
            "@types/express": "^4.17.17",
            "@types/jest": "^29.5.2",
            "@types/node": "^20.3.1",
            "@types/supertest": "^2.0.12",
            "jest": "^29.5.0",
            "source-map-support": "^0.5.21",
            "supertest": "^6.3.3",
            "ts-jest": "^29.1.0",
            "ts-loader": "^9.4.3",
            "ts-node": "^10.9.1",
            "tsconfig-paths": "^4.2.0",
            "typescript": "^5.1.3"}},
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"}}