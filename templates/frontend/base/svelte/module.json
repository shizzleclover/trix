{
    "name": "svelte-base",
    "type": "base",
    "framework": "svelte",
    "files": [
        {
            "source": "frontend/base/svelte/src/App.svelte",
            "destination": "src/App.svelte",
            "type": "template"
        },
        {
            "source": "frontend/base/svelte/src/main.ts",
            "destination": "src/main.{{#if typescript}}ts{{else}}js{{/if}}",
            "type": "template"
        },
        {
            "source": "frontend/base/svelte/index.html",
            "destination": "index.html",
            "type": "template"
        },
        {
            "source": "frontend/base/svelte/vite.config.ts",
            "destination": "vite.config.{{#if typescript}}ts{{else}}js{{/if}}",
            "type": "template"
        },
        {
            "source": "frontend/base/svelte/src/vite-env.d.ts",
            "destination": "src/vite-env.d.ts",
            "type": "template",
            "condition": "typescript"
        }
    ],
    "dependencies": {
        "prod": {
            "svelte": "^4.2.8"
        },
        "dev": {
            "@sveltejs/vite-plugin-svelte": "^3.0.1",
            "vite": "^5.0.10",
            "svelte-check": "^3.6.2",
            "tslib": "^2.6.2",
            "typescript": "^5.3.3"}},
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-check --tsconfig ./tsconfig.json"}}