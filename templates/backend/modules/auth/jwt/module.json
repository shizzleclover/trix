{
    "name": "jwt",
    "type": "auth",
    "files": [
        {
            "source": "backend/modules/auth/jwt/auth.middleware.ts",
            "destination": "src/middleware/auth.{{#if typescript}}ts{{else}}js{{/if}}",
            "type": "template"
        },
        {
            "source": "backend/modules/auth/jwt/jwt.utils.ts",
            "destination": "src/utils/jwt.{{#if typescript}}ts{{else}}js{{/if}}",
            "type": "template"
        }
    ],
    "dependencies": {
        "prod": {
            "jsonwebtoken": "^9.0.2",
            "bcryptjs": "^2.4.3"
        },
        "dev": {
            "@types/jsonwebtoken": "^9.0.5",
            "@types/bcryptjs": "^2.4.6"}},
    "injections": [
        {
            "file": ".env",
            "position": "append",
            "code": "JWT_SECRET=\"your_super_secret_key_here\"\nJWT_EXPIRES_IN=\"7d\""
        }
    ]
}